server {
    listen 80;
    server_name example.com;

    # Basic Auth (на весь сайт)
    auth_basic "Restricted";
    auth_basic_user_file /etc/nginx/.htpasswd;

    # Статика SPA (собранный фронтенд)
    root /var/www/web_scheduler;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    # Проксирование API к Uvicorn
    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300;
    }

    # Дополнительно: отдача /health напрямую при необходимости
    # location = /api/health { return 200 '{"status":"ok"}'; add_header Content-Type application/json; }
}


